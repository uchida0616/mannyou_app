<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @tasks.each do |task| %>
  <tr class="task">
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to 'タスクを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除しますか？'} %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくタスクを追加する', new_task_path %>
